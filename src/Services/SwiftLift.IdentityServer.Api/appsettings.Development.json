{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore.Authentication": "Debug",
        "System": "Warning"
      }
    }
  },
  "AzureLogStream": {
    "Enabled": true,
    "PathTemplate": "../../LogFiles/Application/{0}.txt",
    "FileSizeLimit": 4194304,
    "RollOnSizeLimit": true,
    "RetainedFileCount": 1,
    "RetainTimeLimit": "1:00:00:00"
  }
}
